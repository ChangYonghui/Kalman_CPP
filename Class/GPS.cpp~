#include "../Headers/GPS.h"
#include "../Headers/DataReader.h"
#include <iostream>
#include <string>

using namespace std;

GPS::GPS(std::string n){      
        this->data = new vector <int>(6);
        this->topic_name=n;
        this->reader= new DataReader(this->topic_name);
}

//Affichage des données dans le buffer
void GPS::Display(){

        cout << "Nom du topic à lire : " << this->topic_name << endl;
        for(int i=0; i<6; i++){
                cout << this->data->at(i) << endl;
        }

}

//Recupère les données en provenance du noeud ROS associé
void GPS::Acquisition(){
        
        this->reader->Reading();
        this->Analysis();
        
        
}

//Analyse les données recuent et les converti en entier
void GPS::Analysis(){
        
        for(int i=0; i<6; i++){
                 this->data->at(i)=i;
        }

}
